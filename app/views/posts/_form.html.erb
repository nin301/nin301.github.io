<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :about %><br>
    <%= f.text_area :about, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :video %><br>
    <%= f.text_area :video, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.text_field :image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :order_link %><br>
    <%= f.text_area :order_link, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :type %><br>
    <%= f.collection_select :type, Post::TYPES, :to_s, :humanize, {:selected => params[:type]}, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
